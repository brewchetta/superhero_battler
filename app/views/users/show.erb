<div class="title">
  <h3><%= @user.name %></h3>

  <!-- Edit button if logged in -->
  <% if @user.id == session[:user_id] %>

    <p style="font-size: 0.4em"><%= link_to "Edit Profile", edit_user_path, class: "edit-user-bt"%></p>

  <% end %>

</div>




<!-- Teamlist divs -->
  <div class="user-team-list">

    <h2 style="border-bottom: dotted black 3px; border-top: dotted black 3px; font-family: 'Bangers', sans-serif;">Teams</h2>

    <!-- New Team button if logged in -->
    <% if @user.id == session[:user_id] %>
    <p class="user-new-team-bt"><%= link_to "Put Together A New Team", new_user_team_path(@user) %></p>
    <% end %>


      <% @teams.each do |t| %>
      <div class="user-team">
        <p style="color:black"><%= link_to t.roster_name, user_team_path(@user, t) %>
          <% if session[:user_id] %>
          <% if session[:user_id] == @user.id  %> : <%= link_to "Remove", user_team_path(@user,t), method: :delete %></p>
          <% end %>
          <% end %>

          <!-- Hero list -->
          <ul>
            <% t.heros.each do |hero| %>
              <li><%= hero.name %></li>
            <% end %>
          </ul>
      </div>
      <% end %><br>

  </div>
